{{if and .Children (not .OmitChildrenFromTableOfContents)}}
<div class="children">
  <table>
    {{range .Children}}
      <tr>
        {{if and .Parent (lt .Depth 3)}}
          <td class="number-cell" align="right">{{.Number}}&nbsp;</td>
        {{else}}
          <td class="number-cell" align="left"></td>
        {{end}}
        <td class="title-cell">
          <a href="{{.PrimaryTag | url}}">
            {{- .Title | render -}}
          </a>

          {{template "page-toc.tmpl" .}}
        </td>
      </tr>
    {{end}}
  </table>
</div>
{{end}}
