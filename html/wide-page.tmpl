<!DOCTYPE html>
<html>
  <head>
    {{template "head.tmpl" .}}
  </head>
  <body class="wide">
    {{template "top.tmpl" .}}

    <div class="page-aside">
      {{- if .Partial "RightSide" }}
      <div class="page-partial">
        {{.Partial "RightSide" | render}}
      </div>
      {{ end -}}
    </div>

    <div class="page-content wide">
      {{template "section.tmpl" .}}
    </div>
  </body>
</html>
